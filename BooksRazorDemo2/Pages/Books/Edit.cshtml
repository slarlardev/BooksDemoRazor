@page
@model BooksRazorDemo2.Pages.EditModel
@{
     ViewData["Title"] = "Kitap Bilgi Güncelle";
}

<form method="post">

    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Edit Book</h2>
            <hr/>
        </div>
        
        <div class="mb-3">
            Title :
            <input asp-for="Book.Title" type="text" name="title" class="form-control"/>
        </div>
        <div class="mb-3">
            Published Year :
            <input asp-for="Book.PublishedYear" type="number" name="publishedYear" class="form-control"/>
        </div>
        <button type="submit" style="width:150px" > SAVE</button>
    </div>
</form>